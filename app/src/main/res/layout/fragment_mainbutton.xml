<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".fragment.FragmentMainButton">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_geometric_shapes_grey"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:paddingVertical="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp">


            <LinearLayout
                android:id="@+id/dp_plus_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/user_dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_account"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/flag_india"
                    android:layout_gravity="right"
                    android:layout_marginTop="-20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toEndOf="@id/dp_plus_flag"
                app:layout_constraintTop_toTopOf="@id/dp_plus_flag"
                app:layout_constraintBottom_toBottomOf="@id/dp_plus_flag">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/hi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Hi,"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/worker_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/poppins"
                        android:text="Siraj Alam"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />

                </LinearLayout>

                <TextView
                    android:id="@+id/services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Find the best services \nfrom the comfort of your home."
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#8F8E8E"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A75B1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/header" />


        <ImageButton
            android:id="@+id/main_button"
            android:layout_width="275dp"
            android:layout_height="275dp"
            app:tint="@null"
            app:srcCompat="@drawable/img_jobdone_round"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shp_bigroundbutton"
            android:elevation="5dp"/>

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/arrow_img"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_curled_arrow"
            app:layout_constraintTop_toBottomOf="@id/main_button"
            app:layout_constraintStart_toStartOf="parent"
            android:rotation="-60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Get your Job done \nin one click!"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/orange_300"
            app:layout_constraintBottom_toBottomOf="@id/arrow_img"
            app:layout_constraintStart_toEndOf="@id/arrow_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>