<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="5dp"
    android:id="@+id/customeritem">

    <ImageView
        android:id="@+id/workerscustomerdp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_jobdone_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/customername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/workerscustomerdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:text="Team Jobdone"/>
    <TextView
        android:id="@+id/cuslastmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/customername"
        app:layout_constraintLeft_toRightOf="@id/workerscustomerdp"
        android:layout_marginStart="10dp"
        android:text="Hello"/>

    <TextView
        android:id="@+id/last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Seen"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/customername"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:30 AM"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/last_seen"
        app:layout_constraintEnd_toEndOf="@id/last_seen"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customeritem"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>