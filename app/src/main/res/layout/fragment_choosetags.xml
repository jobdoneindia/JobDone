        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/shp_search_icon_background"
            android:contentDescription="@string/app_name"
            android:padding="6dp"
            android:src="@drawable/ic_search"
            app:tint="@color/orange_300" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/colorBackground"
        android:id="@+id/spacing1"
        app:layout_constraintTop_toBottomOf="@id/searchSection" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ServicesList"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:fadeScrollbars="false"
        tools:listitem="@layout/tag_item_view"
        app:layout_constraintTop_toBottomOf="@id/spacing1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="5dp"
        />-->

</androidx.constraintlayout.widget.ConstraintLayout>