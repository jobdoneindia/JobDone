<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        android:rotation="-180"
        android:background="@null"
        android:id="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/toptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingHorizontal="20dp"
        android:text="Click On Your \nPreferred Service or"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:lineSpacingExtra="-11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_button" />

    <LinearLayout
        android:id="@+id/searchSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/shp_white_rectangle_background"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toptext"
        android:elevation="4dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search..."
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/shp_search_icon_background"
            android:contentDescription="@string/app_name"
            android:padding="6dp"
            android:src="@drawable/ic_search"
            app:tint="@color/orange_300" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/colorBackground"
        android:id="@+id/spacing1"
        app:layout_constraintTop_toBottomOf="@id/searchSection" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ServicesList"
        tools:listitem="@layout/tag_item_view"
        app:layout_constraintTop_toBottomOf="@id/spacing1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>