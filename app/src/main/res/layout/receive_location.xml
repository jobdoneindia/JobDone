<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:background="@drawable/chatcorner_receive"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Location"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnDeclined"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Declined"
            android:backgroundTint="#FDC7C7"
            android:textColor="#DF4B4B"
            android:drawableLeft="@drawable/ic_decline"
            android:drawableTint="#DF4B4B"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnViewMap"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Location"
            android:backgroundTint="#8AB1F8"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_location"
            android:drawableTint="@color/colorPrimary"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:backgroundTint="#AEC4EC"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:textColor="@color/black"
            android:backgroundTint="#CAC4C4" />

    </LinearLayout>

</RelativeLayout>