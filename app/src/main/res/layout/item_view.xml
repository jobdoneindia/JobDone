<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tagSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_effect"
    >

        <TextView
            android:id="@+id/tagButton"
            android:layout_margin="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#C4C6CF"
            android:textAlignment="center"
            android:text="Fridge repair"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_margin="9dp"
            android:id="@+id/worker_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/orange_300"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#D1CCCC"
        android:layout_marginTop="7.5dp"
        app:layout_constraintTop_toBottomOf="@id/tagButton"/>



</androidx.constraintlayout.widget.ConstraintLayout>